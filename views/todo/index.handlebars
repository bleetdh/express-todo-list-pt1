<a href="/"> Home </a>
<h2> Creating To Do List </h2>

<form action="/todo" method="post">
  <label for="name">Name: </label>
  <input id='name' type="text" name="name">

  <label for="description">Description: </label>
  <input id="description" type="text" name="description">

  <label for="completed">Completed: </label>{{!-- <input id="completed" type="text" name="completed"> --}}
  {{> completed}}
    <button type="submit">Create</button>
</form>

<h2> All your To Do </h2>
<ul>
  {{#each todos as |todo|}}
    <li>
      name: {{ todo.name }}</br>
      description: {{ todo.description }}</br>
      completed: {{ todo.completed }} </br>
      {{!-- i check if todo is completed --}}
      {{#unless todo.completed}}
      {{!-- if todo.completed is false --}}
        have you completed? {{> completed}}
      {{/unless}}
      <hr>
    </li>
  {{/each}}
</ul>
